{
  "swagger": "2.0",
  "info": {
    "title": "Masterblog API",
    "version": "1.0.0"
  },
  "host": "localhost:5002",
  "basePath": "/",
  "schemes": [
    "http"
  ],
  "tags": [
    {
      "name": "Post",
      "description": "Post API - CRUD"
    }
  ],
  "paths": {
    "/api/posts": {
      "get": {
        "summary": "Returns all posts",
        "produces": [
          "application/json"
        ],
        "tags": [
          "Post"
        ],
        "parameters": [
          {
            "name": "sort",
            "in": "query",
            "description": "Field to sort by (title or content)",
            "required": false,
            "type": "string",
            "enum": ["title", "content"]
          },
          {
            "name": "direction",
            "in": "query",
            "description": "Sort direction (asc or desc)",
            "required": false,
            "type": "string",
            "default": "asc",
            "enum": ["asc", "desc"]
          }
        ],
        "responses": {
          "200": {
            "description": "Successful operation"
          }
        }
      },
      "post": {
        "summary": "Create a new post",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "tags": [
          "Post"
        ],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "Post object that needs to be added",
            "required": true,
            "schema": {
              "type": "object",
              "required": ["title", "content"],
              "properties": {
                "title": { "type": "string" },
                "content": { "type": "string" }
              }
            }
          }
        ],
        "responses": {
          "201": { "description": "Post created" },
          "400": { "description": "Invalid input" }
        }
      }
    },
    "/api/posts/{post_id}": {
      "parameters": [
        {
          "name": "post_id",
          "in": "path",
          "description": "ID of the post",
          "required": true,
          "type": "integer"
        }
      ],
      "put": {
        "summary": "Update an existing post",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "tags": [
          "Post"
        ],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "Post object with updated fields",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "title": { "type": "string" },
                "content": { "type": "string" }
              }
            }
          }
        ],
        "responses": {
          "200": { "description": "Post updated" },
          "404": { "description": "Post not found" }
        }
      },
      "delete": {
        "summary": "Delete a post",
        "produces": [
          "application/json"
        ],
        "tags": [
          "Post"
        ],
        "responses": {
          "200": { "description": "Post deleted" },
          "404": { "description": "Post not found" }
        }
      }
    },
    "/api/posts/search": {
      "get": {
        "summary": "Search posts by title or content",
        "produces": [
          "application/json"
        ],
        "tags": [
          "Post"
        ],
        "parameters": [
          {
            "name": "title",
            "in": "query",
            "description": "Title to search for",
            "required": false,
            "type": "string"
          },
          {
            "name": "content",
            "in": "query",
            "description": "Content to search for",
            "required": false,
            "type": "string"
          }
        ],
        "responses": {
          "200": { "description": "Search successful" }
        }
      }
    }
  }
}
